<h2>Attendance List</h2>
<% if @attendances.empty? %>
	<b>No attendees yet</b>
<% else %>
	<table>
		<thead>
			<th>Name</th>
			<th></th>
		</thead>
		<tbody>
			<% @attendances.each do |attendance| %>
				<tr>
					<td><%= link_to attendance.user.name, user_path(attendance.user) %></td>
					<% if current_user && attendance.user.id == current_user.id %>
						<td>Some confirm button</td>
					<% else %>
						<% if attendance.confirmed %>
							<td><span class='confirmed'>Confirmed</span></td>
						<% else %>
							<td><span class='unconfirmed'>Unconfirmed</span></td>
						<% end %>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>